<h2><%= @task.title %></h2>

<div class="card">
  <p><%= @task.detail %></p>
</div>


<div class="completed">
  <p><%= @task.completed ? "✅ This task is completed." : "❎ This task is not yet completed." %></p>
</div>

<p><%= link_to "Update the task", edit_task_path(@task) %></p>

<p><%= link_to "Back to the list", tasks_path %></p>

